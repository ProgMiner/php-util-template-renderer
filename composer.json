{
    "name": "progminer/util-template-renderer",
    "description": "Abstract Template Renderer for different template engines",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ProgMiner",
            "email": "eridan200@mail.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^7",
        "symfony/config": "^4.1",
        "twig/twig": "2.x-dev"
    },
    "suggest": {
        "twig/twig": "To use the twig template renderer",
        "symfony/config": "To use the php template renderer"
    },
    "autoload": {
        "psr-4": {
            "ProgMinerUtils\\TemplateRenderer\\": "lib"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --disallow-todo-tests"
    }
}
